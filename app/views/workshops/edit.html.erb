<%workshop = Workshop.find(params[:id]) %>

<h1><%=workshop.name%> <%=workshop.date%></h1>
<h1 id="workshop_navi"><% if !workshop.published and !workshop.participant_form.nil? %>
<%= link_to "publish", { :controller => "workshops", :action => "publish", :id=>workshop.id} do %><i class="fa fa-eye"></i> publish workshop<% end %>
<% else %>
<%= link_to "unpublish", { :controller => "workshops", :action => "unpublish", :id=>workshop.id} do %><i class="fa fa-eye-slash"></i> unpublish workshop<% end %>
<% end %><br>
<%= link_to registrations_path(:workshop=>workshop.id), :title=>"Show Registrations" do %><i class="fa fa-arrow-right"></i> show registrations<% end %></h1>

<div class="workshop_show_form_box">
	<div class="participant_box">
  <% if workshop.participant_form != nil %>
    <%= link_to edit_form_path(workshop.participant_form.id), :title=>"Edit Participant Form" do %><i class="fa fa-pencil"> Edit Participant Form</i><% end %><br />
    <%= link_to new_registration_path(:id=>workshop.id, :type=>:participant), :title=>"Participant Registration Link" do %><i class="fa fa-arrow-right"></i> Participant Registration Link<% end %>
  <% else %>
    <%= link_to new_form_path(:type => :participant, :workshop_id => workshop.id), :title=>'Add Participant Form' do %><i class="fa fa-plus"></i><br /> Add Participant Form<% end %>
    <% if @forms.count > 0 %>
      <%= link_to forms_path(:id=>workshop.id, :type=>"participant"), :title=>'Add excisting Participant Form' do %><i class="fa fa-plus"></i> Add excisting Participant Form<% end %>
    <% end %>
  <% end %>
  </div>
  <div class="coachBox">
  <% if workshop.coach_form != nil %>
    <%= link_to edit_form_path(workshop.coach_form.id), :title=>"Edit Coach Form" do %><i class="fa fa-pencil"></i> Edit Coach Form<% end %><br />
  <% else %>
    <%= link_to new_form_path(:type => :coach, :workshop_id => workshop.id), :title=>'Add Coach Form' do %>
    <i class="fa fa-plus"></i> Add Coach Form<% end %><br />
    <% if @forms.count > 0 %>
      <%= link_to forms_path(:id=>workshop.id, :type=>"coach"), :title=>'Add existing Coach Form' do %><i class="fa fa-plus"></i> Add existing Coach Form<% end %>
    <% end %>
  <% end %>
  <% if workshop.keys.include? "coach_key" %>
    <%= link_to new_registration_path(:id=>workshop.id, :type=>"coach",:coach_key=>workshop.coach_key), :title=>"Coach Registration Link" do %><i class="fa fa-arrow-right"></i> Coach Registration Link<% end %>
  <% end %>
  </div>
</div>

<%= render 'form' %>

<div class="workshop_show_mail_box">
  <% if workshop.mail_template != nil %>
    <%= link_to edit_mail_template_path(workshop.mail_template.id), :title=>"Edit Mail Template" do %><i class="fa fa-pencil"></i> Edit Mail Template for automatic Email confirmations after every registration<% end %><br />
  <% else %>
    <%= link_to new_mail_template_path(:workshop_id => workshop.id), :title=>'Add Mail Template' do %><i class="fa fa-plus"></i><br /> Add Mail Template for automatic Email confirmations after every registration<% end %>
    <% if @mail_templates.count > 0 %>
      <%= link_to mail_templates_path(:workshop_id => workshop.id), :title=>'Add excisting Mail Template' do %><i class="fa fa-plus"></i> Existing<% end %>
    <% end %>
  <% end %>
	<%= link_to workshops_manual_mail_show_path(:id => workshop.id), :title=>'New Mail' do %><i class="fa fa-plus"></i>Send Email to multiple participants, coaches or admins<% end %>
</div>