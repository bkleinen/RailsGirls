<div class="center hero-unit">
	<h1>Rails Girls Magdeburg</h1>
	<h2>You can register for the following Workshops:</h2>
</div>
	<ul>
		<% @workshops.each do |workshop| %>
			<% if workshop.status != nil %>
				<ul>
					<td><%=workshop.name%></td>
					<td><%=workshop.description%></td>
					<td><%=workshop.date%></td>
					<%= link_to "Register now!", new_registration_path(:id=>workshop.id, :type=>'participant'), class: "btn btn-large btn-primary" %>
				</ul>
			<% end %>
		<%end%>
	</ul>

